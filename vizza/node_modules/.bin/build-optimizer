#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node --max-old-space-size=16000"  "$basedir/../@angular-devkit/build-optimizer/src/build-optimizer/cli.js" "$@"
  ret=$?
else 
  node --max-old-space-size=16000  "$basedir/../@angular-devkit/build-optimizer/src/build-optimizer/cli.js" "$@"
  ret=$?
fi
exit $ret


